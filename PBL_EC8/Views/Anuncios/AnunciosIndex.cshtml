@model UsuarioDto;

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="../js/anuncios.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Marketplace</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #000000;
            display: flex;
            justify-content: center;
            margin: 0;
        }

        .marketplace {
            width: 70%;
            margin: 0px 300px;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .product {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            transition: transform 0.2s;
        }

        .product:hover {
            transform: scale(1.05);
        }

        .product img {
            width: 100%;
            max-height: 150px;
            object-fit: cover;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .product-title {
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .product-price {
            color: #28a745;
            font-size: 18px;
            margin-bottom: 15px;
        }

        /* Paginação */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        button {
            padding: 10px 15px;
            margin: 0 5px;
            border: none;
            background-color: #00FF0A;
            color: #000000;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        button:hover {
            background-color: #00c707;
            transform: scale(1.05);
        }

        .modal {
            display: none;
            /* Oculto por padrão */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            /* Fundo semi-transparente */
            justify-content: center;
            align-items: center;
            color: #00FF0A;
        }

        /* Estilos da caixa de conteúdo do modal */
        .modal-content {
            background-color: #252525;
            padding: 20px;
            width: 80%;
            max-width: 500px;
            /* Largura máxima */
            border-radius: 8px;
            text-align: center;
        }

        img {
            max-width: 70%;
            height: auto;
        }
    </style>
</head>

<body>
    <div class="sidebar-container">
    @await Html.PartialAsync("_MenuLateral")
  </div>
    <div class="marketplace">
        <a name="lblEsqueciSenha" id="lblEsqueciSenha" class="navbar-brand" style="font-size: 100%" onclick=""
            asp-area="" asp-controller="Comunidade" asp-action="ComunidadeIndex">Anúncios</a>
        <button onclick="anuncios().abrirModalCadastrarAnuncio();">Anunciar</button>
        <div class="product-grid" id="productGrid">
            <!-- Produtos vão ser inseridos aqui -->
            <!-- Cada produto contém uma imagem, um título e um preço -->
            <div class="product">
                <img src="../img/pump_vazio.png" alt="Produto 1">
                <div class="product-title">Produto 1</div>
                <div class="product-price">R$100,00</div>
            </div>
            <div class="product">
                <img src="../img/pump_vazio.png" alt="Produto 2">
                <div class="product-title">Produto 2</div>
                <div class="product-price">R$200,00</div>
            </div>
            <div class="product">
                <img src="../img/pump_vazio.png" alt="Produto 3">
                <div class="product-title">Produto 3</div>
                <div class="product-price">R$300,00</div>
            </div>
            <!-- Adicione mais produtos conforme necessário -->
        </div>

        <div id="modalCadastroAnuncio" class="modal">
            <div class="modal-content">
                <h2>Anúncio</h2>
                <br>
                <div id="divImagemPerfil">
                    <img id="imgPreview" src="#" alt="Imagem do perfil" />
                </div>
                <br>

                <!-- Campo Título -->
                <label for="textboxTitulo">Título:</label>
                <input type="text" id="textboxTitulo" placeholder="Digite o título do anúncio" required>
                <br>

                <!-- Campo Profissão -->
                <label for="textboxProfissao">Profissão:</label>
                <input type="text" id="textboxProfissao" placeholder="Digite sua profissão" required>
                <br>

                <!-- Campo Estado -->
                <label for="comboEstado">Estado:</label>
                <select id="comboEstado" required>
                    <option value="" disabled selected>Selecione seu estado</option>
                    <!-- Adicione aqui opções dos estados ou preencha dinamicamente -->
                    <option value="SP">São Paulo</option>
                    <option value="RJ">Rio de Janeiro</option>
                    <!-- Outros estados... -->
                </select>
                <br>

                <!-- Campo Cidade -->
                <label for="textboxCidade">Cidade:</label>
                <input type="text" id="textboxCidade" placeholder="Digite sua cidade" required>
                <br>

                <!-- Campo Descrição -->
                <label for="textareaDescricao">Descrição:</label>
                <textarea id="textareaDescricao" placeholder="Digite uma descrição" required></textarea>
                <br>

                <!-- Botão Cadastrar Anúncio -->
                <button id="btnCadastrarAnuncio" onclick="anuncios().cadastrarAnuncio();">Cadastrar
                    Anúncio</button>
            </div>
        </div>


        <div id="modalPerfilInvalido" class="modal">
            <div class="modal-content">
                <h2>Perfil inválido!</h2>
                <br>
                <label>Anuncie seu trabalho assinando nosso plano Premium!</label>
                <br>
                <div>
                    <button id="btnCadastrarAnuncio" onclick="anuncios().fecharModalPerfilInvalido();">Vamos lá!</button>
                    <button id="btnCadastrarAnuncio" onclick="anuncios().fecharModalPerfilInvalido();">Fechar</button>

                </div>
            </div>
        </div>

        <div id="loginPopup" class="modal">
            @Html.Partial("_LoginPopup")
        </div>
    </div>
</body>

</html>
