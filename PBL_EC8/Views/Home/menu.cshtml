@{
    ViewData["Title"] = "PRATIKA";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="../js/loginUsuario.js"></script>
    <title>PRATIKA</title>
</head>

<body>
    <!-- TÃ­tulo acima da caixa -->
    <label class="title">PRATIKA</label>

    <!-- Caixa centralizada com campos de login -->
    <div class="login-box">
        <input name="textboxLogin" id="textboxLogin" type="text" placeholder="Login">
        <br>
        <input name="textboxSenha" id="textboxSenha" type="password" placeholder="Senha">
        <br>
        <a name="lblEsqueciSenha" id="lblEsqueciSenha" class="navbar-brand" style="font-size: 100%" onclick=""
            asp-area="" asp-controller="Home" asp-action="CadastroUsuario">Esqueci minha senha</a>
        <br>
        <a name="lblCadastroUsuario" id="lblCadastroUsuario" class="navbar-brand" style="font-size: 100%" onclick=""
            asp-area="" asp-controller="Home" asp-action="CadastroUsuario">Cadastre-se</a>
        <br>
        <button class="botao-login" name="btnLogin" id="btnLogin" onclick="loginUsuario().validacaoLogin();">Login</button>
    </div>

</body>

</html>
