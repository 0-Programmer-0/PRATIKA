<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="../js/menu.js" defer></script>
    <title>PRATIKA</title>
    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: black;
            font-family: Arial, sans-serif;
            flex-direction: column;
        }

        /* Estilo do título "PRATIKA" */
        .title {
            color: #00FF0A; /* Verde para combinar com as bordas */
            font-size: 28px;
            margin-bottom: 20px; /* Espaçamento entre o título e a caixa de login */
        }

        /* Estilo do quadrado com bordas */
        .login-box {
            width: 300px;
            padding: 20px;
            border: 3px solid #00FF0A; /* Bordas verdes */
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Estilo da label "esqueci minha senha" */
        .forgot-password {
            color: #ffffff;
            cursor: pointer;
            margin-top: 10px;
            text-decoration: underline;
        }

        .forgot-password:hover {
            color: #c3c3c3;
        }

        .botao-login {
            color: black;
            background-color: #00FF0A;
        }
    </style>
</head>
<body>

    <!-- Título acima da caixa -->
    <label class="title">PRATIKA</label>

    <!-- Caixa centralizada com campos de login -->
    <div class="login-box">
        <input name="textboxLogin" type="text" placeholder="Login">
        <br>
        <input name="textboxSenha" type="password" placeholder="Senha">
        <br>
        <label class="forgot-password" onclick="alert('Recuperação de senha iniciada')">Esqueci minha senha</label>
        <br>
        <button class="botao-login" name="" id="btnLogin" onclick="menu().verificaLogin();">Login</button>
    </div>

</body>
</html>
