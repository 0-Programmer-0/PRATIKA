<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="../js/menu.js" defer></script>
    <link rel="stylesheet" href="../css/menu.css">
    <title>PRATIKA</title>
</head>
<body>

    <main>
        <!-- Caixa centralizada com campos de login -->
        <div class="login-box">
            <img src="../img/Component-19.png">
            <label>Login</label>
            <input class="input-senha-email" name="textboxLogin" id="textboxLogin" type="text">
            <br>
            <label>Senha</label>
            <input class="input-senha-email" name="textboxSenha" id="textboxSenha" type="password">
            <br>
            <label class="forgot-password" onclick="alert('Recuperação de senha iniciada')">Esqueci minha senha</label>
            <br>
            <button class="botao-login" name="" id="btnLogin" onclick="menu().verificaUsuarioAjax();">Login</button>
        </div>
    </main>

</body>
</html>
